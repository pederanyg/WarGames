         <font>
            <Font size="14.0" />
         </font>
      </RadioButton>
      <Button fx:id="battle" layoutX="253.0" layoutY="356.0" mnemonicParsing="false" onAction="#startBattleClicked" text="Start Battle!">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </children>
